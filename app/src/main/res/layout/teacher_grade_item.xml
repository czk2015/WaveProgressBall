<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/teacher_icon"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/enterprise_act__text"
            android:text="反馈评分"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/enterprise_act__text"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.fips.huashun.widgets.NumberPicker
            android:id="@+id/number_picker_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:np_dividerColor="@color/enterprise_act__text"
            app:np_formatter="@string/number_picker_formatter"
            app:np_max="5"
            app:np_min="0"
            app:np_textColor="@color/enterprise_act_qianhui"
            app:np_textSize="20dp"
            app:np_typeface="@string/roboto_light"/>
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/circle_point_shape"
            />
        <com.fips.huashun.widgets.NumberPicker
            android:id="@+id/number_picker_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:np_dividerColor="@color/enterprise_act__text"
            app:np_formatter="@string/number_picker_formatter"
            app:np_max="9"
            app:np_min="0"
            app:np_textColor="@color/enterprise_act_qianhui"
            app:np_textSize="20dp"
            app:np_typeface="@string/roboto_light"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="提示： 最高5.0,最低分0.1分"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#55666666"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ffff"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/enterprise_act__text"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffff"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>