<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_main_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_bar_height"
    android:background="@color/title_color"
    android:gravity="center_vertical" >

    <ImageButton
        android:id="@+id/img_btn_navigation_left"
        android:layout_width="@dimen/navigation_bar_height"
        android:layout_height="@dimen/navigation_bar_height"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tv_navigation_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navigation_bar_height"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#ECECFB"
        android:textSize="@dimen/text_size_big"
        android:visibility="gone" />

    <TextView
      android:id="@+id/tv_navigation_title"
      style="@style/navigation_title_style" />

    <ImageButton
        android:id="@+id/img_btn_navigation_right"
        android:layout_width="@dimen/navigation_bar_height"
        android:layout_height="@dimen/navigation_bar_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:padding="5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_navigation_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navigation_bar_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_basic"
        android:visibility="gone" />

</RelativeLayout>