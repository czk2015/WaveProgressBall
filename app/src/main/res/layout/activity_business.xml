<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
 >
    <com.fips.huashun.ui.utils.NavigationBar
        android:id="@+id/na_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.fips.huashun.ui.utils.NavigationBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_enterprise_act_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/icon_image"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_enterprise_act_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/text_bg"
        />
    <View
        android:layout_width="match_parent"
        android:background="@color/line_gary"
        android:layout_height="1px"/>
    <TextView
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/text_bg"
        android:text="时间"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_bg"
            android:text="开始时间："
            />

        <TextView
            android:id="@+id/tv_enterprise_act_starttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="结束时间："
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_bg"
            />

        <TextView
            android:id="@+id/tv_enterprise_act_endtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_bg"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/line_gary"
        android:layout_height="1px"/>

    <com.fips.huashun.widgets.MyGridView
        android:id="@+id/gv_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:numColumns="3"
        android:verticalSpacing="@dimen/space_5"
        ></com.fips.huashun.widgets.MyGridView>

    <View
        android:layout_width="match_parent"
        android:background="@color/line_gary"
        android:layout_marginTop="@dimen/space_5"
        android:layout_height="1px"/>

    <TextView
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/text_bg"
        android:text="详情介绍"
        />
    <TextView
        android:id="@+id/tv_enterprise_act_content"
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/text_bg"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
