<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="68dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:gravity="center_vertical"

  >
  <ImageView
    android:id="@+id/iv_materials_image"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/space_12"
    android:layout_marginLeft="@dimen/space_10"
    android:layout_gravity="center_vertical"
    android:src="@drawable/v" />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/space_15"
    android:layout_toRightOf="@+id/iv_materials_image"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_materials_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/study_online_itemtitle"
        android:textColor="@color/enterprise_act_hui"
        android:textSize="@dimen/text_size_15" />
      <TextView
        android:id="@+id/tv_materials_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_6"
        android:text="@string/study_online_itemcontent1"
        android:textColor="@color/enterprise_act_qianhui"
        android:textSize="@dimen/space_10" />
    </LinearLayout>
    <ImageView
      android:id="@+id/iv_download"
      android:padding="@dimen/space_4"
      android:layout_marginTop="@dimen/space_5"
      android:layout_width="@dimen/space_35"
      android:layout_height="@dimen/space_35"
      android:layout_marginBottom="@dimen/space_10"
      android:layout_marginRight="@dimen/space_10"
      android:layout_gravity="center_vertical"
      android:src="@drawable/can_d" />
  </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@id/iv_materials_image"
   >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/tv_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/space_15"
        android:gravity="left"
        android:textSize="@dimen/text_size_9"
        android:text="12k/s"
        android:visibility="visible"
        android:textColor="@color/enterprise_act__text" />

      <TextView
        android:id="@+id/tv_totlesize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_9"
       android:layout_marginRight="@dimen/space_10"
        android:gravity="right"
        android:text="100M/s"
        android:textColor="@color/enterprise_act__text" />
    </LinearLayout>
      <com.fips.huashun.widgets.AnimateHorizontalProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="2dp"
        app:ahp_progressColor="@color/title_color"
        android:max="100" />
  </LinearLayout>
</RelativeLayout>