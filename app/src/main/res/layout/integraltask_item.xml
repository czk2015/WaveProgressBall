<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/space_5"
              android:paddingBottom="@dimen/space_5"
              android:paddingLeft="@dimen/space_10"
              android:paddingRight="@dimen/space_10"
              android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:src="@drawable/medal_administration"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tasktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到"
            android:textColor="@color/text_hui"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/tv_taskcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="完成签到即可领取100积分"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_goto_finish"
        android:layout_width="@dimen/space_60"
        android:layout_height="@dimen/space_25"
        android:layout_gravity="center"
        android:background="@drawable/enterprise_mycourse_shape_unfinish"
        android:gravity="center"
        android:text="去完成"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_size_14"/>
</LinearLayout>
