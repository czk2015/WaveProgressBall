<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_enterprise_act_logo"
                android:layout_width="85dp"
                android:layout_height="77dp"
                android:scaleType="fitXY"
                app:riv_corner_radius_bottom_left="@dimen/space_10"
                app:riv_corner_radius_top_left="@dimen/space_10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@drawable/cottage_item_shape_course"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_enterprise_act_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="五一劳动节郊外踏青"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/tv_enterprise_act_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:text="开始时间：2016年8月23日"
                        android:textColor="@color/text_hui"
                        android:textSize="@dimen/text_size_13"/>

                    <TextView
                        android:id="@+id/tv_enterprise_act_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:text="结束时间：2016年8月25日"
                        android:textColor="@color/text_hui"
                        android:textSize="@dimen/text_size_13"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_finish_activity"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@drawable/activity_item_shape_right"
            android:gravity="center|right"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_enterprise_act_finish"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_5"
                android:src="@drawable/enterprise_act_finish"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
