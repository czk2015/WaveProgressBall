<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_5">

        <TextView
            android:id="@+id/tv_mybeans_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mybeans_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_mybeans_changebean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:text="500"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mybeans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-09-28 12:55:22"
            android:textColor="@color/text_hui"
            android:textSize="@dimen/text_size_13"/>
        <TextView
            android:id="@+id/tv_my_currentbean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="余额:12355"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_hui"/>
    </LinearLayout>

</LinearLayout>
