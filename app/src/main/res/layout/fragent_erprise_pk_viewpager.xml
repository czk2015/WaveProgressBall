<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="名次"/>
        <TextView
            android:id="@+id/tv_show_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"/>
        <TextView
            android:id="@+id/tv_show_jopname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="岗位"/>
        <TextView
            android:id="@+id/tv_show_counts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成数"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_gary"/>
    <ListView
        android:id="@+id/lv_enterprise_pkpage_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:dividerHeight="@dimen/space_1"
        android:divider="@color/green_grass_eighty"
        android:background="@color/white"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent">
    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:gravity="center"
        android:background="@color/title_color">
        <TextView
            android:id="@+id/tv_myrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_transcend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_myrank"
            android:layout_alignBottom="@+id/tv_myrank"
            android:layout_marginLeft="@dimen/space_5"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
