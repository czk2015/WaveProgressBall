<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginLeft="@dimen/space_12"
    android:layout_marginRight="@dimen/space_10"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/round_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:riv_corner_radius_top_left="@dimen/space_10"
        app:riv_corner_radius_top_right="@dimen/space_10"
        android:layout_alignParentTop="true"
        android:src="@drawable/home_image"
       android:scaleType="fitXY"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tag1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/button_fang_yellow"
            android:text="人力资源"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            />
        <TextView
            android:id="@+id/tv_tag2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/button_fang_yellow"

            android:text="人力资源"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_home_layout"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv__all_course_item_hot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_5"
            android:src="@drawable/hot"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016年最新企业人力资源管理师二级精讲课程"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_10"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/text_black"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:text="人力资源规划、招聘配置、培训与开发"
        android:textSize="@dimen/text_size_13"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:textColor="@color/text_hui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_teacherName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="讲师：王海霞"

            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_hui"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_modou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30魔豆"
            android:textSize="@dimen/text_size_13"
            android:textColor="#ea5514"/>
        <TextView
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_11"
            android:text="26人已学习"
            android:textSize="@dimen/text_size_13"
            android:textColor="#999999"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
