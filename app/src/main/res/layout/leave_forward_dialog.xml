<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#fff"
  android:gravity="bottom"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_45"
    android:padding="@dimen/space_10"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/forward_tv_cacle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/space_3"
      android:background="@drawable/icon_click_selector"
      android:text="取消"
      android:textColor="@color/enterprise_act__defaulttext"
      android:textSize="@dimen/textSize_14" />
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="转发留言"
        android:textColor="@color/enterprise_act__defaulttext"
        android:textSize="@dimen/textSize_16" />
    </LinearLayout>
    <TextView
      android:id="@+id/forward_tv_forward"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/space_3"
      android:background="@drawable/icon_click_selector"
      android:text="发送"
      android:textColor="@color/enterprise_act__text"
      android:textSize="@dimen/space_14" />
  </LinearLayout>
  <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_20"
    android:background="@drawable/bg_line"></View>
  <EditText
    android:id="@+id/forward_et"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_10"
    android:padding="@dimen/space_10"
    android:background="@null"
    android:gravity="top|left"
    android:hint="说两句..."
    android:minLines="2"
    android:textColor="@color/enterprise_act__defaulttext"
    android:textColorHint="@color/enterprise_act_qianhui"
    android:textSize="@dimen/text_size_15" />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_70"
    android:layout_marginTop="@dimen/space_10"
    android:layout_marginBottom="@dimen/space_20"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/forward_image"
      android:layout_width="@dimen/space_65"
      android:layout_height="@dimen/space_70"
      android:layout_marginLeft="@dimen/space_10"
      android:scaleType="fitXY"
      android:src="@drawable/ic_launcher" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginRight="@dimen/space_10"
      android:paddingLeft="@dimen/space_10"
      android:background="@color/line_bg"
      android:gravity="center_vertical"
      android:orientation="vertical">
      <TextView
        android:id="@+id/forward_tv_putname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转发代思思:"
        android:textColor="@color/enterprise_act__defaulttext" />
      <TextView
        android:id="@+id/forward_tv_putcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:text="请问这是直播吗？"
        android:textColor="@color/enterprise_act_hui" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>