<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_leave_detail"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  tools:context="com.fips.huashun.ui.activity.LeaveDetailActivity">

  <com.fips.huashun.ui.utils.NavigationBar
    android:id="@+id/na_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"></com.fips.huashun.ui.utils.NavigationBar>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/space_50"
    android:layout_below="@+id/na_bar">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_15"
        android:background="#f2f2f2" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        android:orientation="horizontal">

        <com.fips.huashun.widgets.HeadTagIamge
          android:id="@+id/feedback_iv_image"
          android:layout_width="@dimen/space_40"
          android:layout_height="@dimen/space_45"
          >
        </com.fips.huashun.widgets.HeadTagIamge>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/space_10"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <TextView
                android:id="@+id/feedback_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吴伟"
                android:textColor="@color/enterprise_act__defaulttext"
                android:textSize="@dimen/text_size_14" />

              <TextView
                android:id="@+id/feedback_tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:text="招聘部"
                android:textColor="@color/enterprise_act_hui"
                android:textSize="@dimen/text_size_11"
                android:visibility="gone" />

              <TextView
                android:id="@+id/feedback_tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:text="招聘专员"
                android:textColor="@color/enterprise_act_hui"
                android:textSize="@dimen/text_size_11"
                android:visibility="gone" />

            </LinearLayout>

            <TextView
              android:id="@+id/feedback_tv_grade"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/space_5"
              android:background="@drawable/bg_teacher_common"
              android:drawableLeft="@drawable/teacher_icon"
              android:gravity="center"
              android:text="讲师评分"
              android:textColor="@color/enterprise_act__text"
              android:textSize="@dimen/space_10"
              android:visibility="gone" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/feedback_tv_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12-13    12:30"
              android:textColor="@color/enterprise_act_qianhui"
              android:textSize="@dimen/text_size_10" />

            <TextView
              android:id="@+id/feedback_tv_delete"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/space_10"
              android:padding="@dimen/space_3"
              android:text="删除"
              android:textColor="@color/enterprise_act__text"
              android:textSize="@dimen/space_10"
              android:visibility="gone" />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <!--反饋文字内容-->
      <TextView
        android:id="@+id/feedback_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        android:text="测试反饋的内容......"
        android:textColor="@color/enterprise_act__defaulttext" />

      <cn.bingoogolapple.photopicker.widget.BGANinePhotoLayout
        android:id="@+id/npl_item_moment_photos"
        style="@style/MatchWrap"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:bga_npl_itemCornerRadius="0dp"
        app:bga_npl_itemSpanCount="3"
        app:bga_npl_itemWhiteSpacing="4dp"
        app:bga_npl_itemWidth="0dp"
        app:bga_npl_otherWhiteSpacing="64dp"
        app:bga_npl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
        app:bga_npl_showAsLargeWhenOnlyOne="true" />

      <View
        android:id="@+id/leave_division_buttom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/line_hui"
        android:visibility="visible" />
      <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_15"
        android:background="#f2f2f2"></View>
      <!--评论列表-->
      <com.fips.huashun.widgets.NoScrollListView
        android:id="@+id/commonlist_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/devideline_listview"
        android:dividerHeight="@dimen/space_1"></com.fips.huashun.widgets.NoScrollListView>
    </LinearLayout>
  </ScrollView>
  <!--底部的评论-->
  <LinearLayout
    android:id="@+id/send_comment_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#f2f2f2"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <EditText
        android:id="@+id/comment_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/space_6"
        android:paddingBottom="@dimen/space_6"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:background="@color/white"
        android:hint="说两句吧..." />

      <TextView
        android:id="@+id/send_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_15"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/space_6"
        android:paddingBottom="@dimen/space_6"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/enterprise_act__text"
        android:textSize="@dimen/text_size_17" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
