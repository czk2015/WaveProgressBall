<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:background="@drawable/enterprise_verification_background">

    <com.fips.huashun.widgets.CircleImageView
      android:layout_width="@dimen/space_100"
      android:layout_height="@dimen/space_100"
      android:layout_centerInParent="true"
      android:src="@mipmap/android_template"
      app:border_color="@color/transparent" />
  </RelativeLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/space_40"
    android:layout_marginTop="@dimen/space_50"
    android:layout_marginLeft="@dimen/space_20"
    android:layout_marginRight="@dimen/space_20"
    android:background="@drawable/login_zhanghao"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/space_10"
      android:text="企业名称"
      android:textColor="@color/text_hui"
      android:textSize="@dimen/text_size_16" />

    <View
      android:layout_width="1px"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/space_10"
      android:layout_marginBottom="@dimen/space_10"
      android:layout_marginLeft="@dimen/space_10"
      android:background="@color/green_grass_seventy" />

    <AutoCompleteTextView
      android:id="@+id/et_noenterprise_name"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/space_16"
      android:background="@null"
      android:completionThreshold="1"
      android:drawablePadding="@dimen/space_5"
      android:dropDownHorizontalOffset="20dp"
      android:hint="请输入企业名称"
      android:textColor="@color/text_hui"
      android:textColorHint="@color/text_hui"
      android:textSize="@dimen/text_size_14" />
  </LinearLayout>

  <Button
    android:id="@+id/bt_enterprise_verification"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_marginTop="@dimen/space_15"
    android:layout_marginLeft="@dimen/space_20"
    android:layout_marginRight="@dimen/space_20"
    android:background="@drawable/selector_login_button"
    android:text="申请验证"
    android:textColor="@color/white"
    android:textSize="@dimen/text_size_16" />

  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_15"
    android:layout_marginRight="@dimen/space_15">

    <TextView
      android:id="@+id/tv_tourist"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/space_40"
      android:layout_alignParentLeft="true"
      android:gravity="center_vertical"
      android:text="游客体验"
      android:textColor="@color/enterprise_text_color"
      android:textSize="@dimen/text_size_16"
      android:visibility="gone" />

    <TextView
      android:id="@+id/tv_enterprise_apply"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/space_40"
      android:layout_alignParentRight="true"
      android:gravity="center_vertical"
      android:text="企业申请"
      android:textColor="@color/enterprise_text_color"
      android:textSize="@dimen/text_size_16" />
  </RelativeLayout>
</LinearLayout>
