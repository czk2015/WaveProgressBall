<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fresco="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <LinearLayout style="@style/ent_organization_ll_memberitem">
    <CheckBox
      android:id="@+id/cb_check_dep"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="visible" />
    <!--头像-->
    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/dep_member_icon"
      android:layout_width="@dimen/space_40"
      android:layout_height="@dimen/space_40"
      android:layout_gravity="center"
      android:src="@drawable/ic_launcher"
      fresco:roundAsCircle="true" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/space_10"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_dep_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加菲猫"
        android:textColor="@color/enterprise_act__defaulttext"
        android:textSize="@dimen/text_size_14" />
      <TextView
        android:id="@+id/tv_dep_member_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加菲猫"
        android:textColor="@color/enterprise_act__defaulttext"
        android:textSize="@dimen/text_size_14" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>