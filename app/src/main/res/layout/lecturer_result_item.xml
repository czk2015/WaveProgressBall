<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="130dp"
              android:orientation="horizontal"
              >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_lecturer_head"
        android:layout_width="@dimen/space_110"
        android:layout_height="130dp"
        app:riv_corner_radius_bottom_left="@dimen/space_10"
        app:riv_corner_radius_top_left="@dimen/space_10"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/cottage_item_shape_course"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5">

            <TextView
                android:id="@+id/tv_lecturer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赵奕楠"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_lecturer_riokin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_5"
                android:gravity="right"
                android:text="0人赞过"
                android:textColor="@color/text_hui"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lecturer_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:maxLines="2"
            android:text="擅长领域：人力资源"
            android:textColor="@color/label_color"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_lecturer_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:maxLines="2"
            android:singleLine="true"
            android:text="服务内容："
            android:textColor="@color/text_hui"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_lecturer_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="主讲："
            android:textColor="@color/text_hui"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>
</LinearLayout>
