<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/lecturer_detail_shape_background">
                <com.fips.huashun.widgets.CircleImageView
                    android:id="@+id/iv_lecturer_head"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="@dimen/space_80"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_gravity="center"
                    app:border_color="@color/transparent"
                    android:src="@drawable/lecturer_info_head_default"/>
                <TextView
                    android:id="@+id/tv_lecturer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:text=""
                    android:textSize="@dimen/text_size_16"
                    android:textColor="#616161"/>
                <TextView
                    android:id="@+id/tv_lecturer_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="#616161"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:background="#30616161"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:paddingTop="@dimen/space_3"
                    android:paddingBottom="@dimen/space_3"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/ll_dianzan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    <com.like.LikeButton
                        android:id="@+id/iv_lecturer_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:icon_size="15dp"
                        app:like_drawable="@drawable/dianzan_red"
                        app:unlike_drawable="@drawable/lecturer_con_like"
                        />
                        <TextView
                            android:id="@+id/tv_dianzha_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                    <!--<ImageView-->
                        <!--android:id="@+id/iv_lecturer_like"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="@dimen/space_20"-->
                        <!--android:layout_weight="1"-->
                        <!--android:src="@drawable/lecturer_con_like"/>-->
                    <!--<ImageView-->
                        <!--android:id="@+id/iv_lecturer_collect"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="@dimen/space_20"-->
                        <!--android:layout_weight="1"-->
                        <!--android:src="@drawable/lecturer_con_collection"/>-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <com.like.LikeButton
                            android:id="@+id/iv_lecturer_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:icon_size="15dp"
                            app:like_drawable="@drawable/collection_red"
                            app:unlike_drawable="@drawable/lecturer_con_collection"
                            />

                        <TextView
                            android:id="@+id/tv_collecte_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_lecturer_share"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_20"
                        android:layout_weight="1"
                        android:src="@drawable/lecturer_con_share"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_lecturer_course_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                android:text="讲师相关课程"
                android:textColor="#616161"
                android:textSize="@dimen/text_size_14"/>
</LinearLayout>
