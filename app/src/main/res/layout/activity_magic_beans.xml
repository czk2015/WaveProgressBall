<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/green_dan"
  >

    <com.fips.huashun.ui.utils.NavigationBar
        android:id="@+id/na_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.fips.huashun.ui.utils.NavigationBar>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="账户余额"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_size_15"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@drawable/button_shape_green"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space_5"
            android:text="魔豆"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_size_15"
            android:gravity="center_vertical"
            android:textColor="@color/text_bg"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_bean_points"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_5"
                android:textSize="@dimen/text_size_14"
                android:gravity="center_vertical"
                android:textColor="@color/text_yellow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_5"
                android:text="魔豆"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"
                android:textColor="@color/text_bg"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_40"
        android:layout_height="@dimen/space_40">

        <Button
            android:id="@+id/bt_chonzhi"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_login_button"
            android:text="充值魔豆"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            />
    </RelativeLayout>

</LinearLayout>
